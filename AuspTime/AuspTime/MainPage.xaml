                <Label x:Name="labelTomorrow8" Text="LABH 05:03 PM" BackgroundColor="Aqua" FontSize="Large" 
                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                <Label x:Name="labelTomorrow9" Text="AMRIT 07:03 PM" BackgroundColor="LightBlue" FontSize="Large" 
                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
            </StackLayout>
        </ScrollView>

        <StackLayout Orientation="Horizontal"  HorizontalOptions="FillAndExpand">
            <StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
                <Button x:Name="configButton" Text="Configuration" BackgroundColor="Aquamarine" 
                        WidthRequest="50" HeightRequest="40" />
            </StackLayout>
            <StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
                <Button x:Name="aboutButton" Text="About" BackgroundColor="Aquamarine" 
                        WidthRequest="50" HeightRequest="40" />
            </StackLayout>
        </StackLayout>
        
