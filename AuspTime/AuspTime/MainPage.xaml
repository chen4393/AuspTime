                <Label x:Name="labelTomorrow6" Text="UDWEG 01:34 PM" BackgroundColor="Red" FontSize="Large" 
                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                <Label x:Name="labelTomorrow7" Text="CHAL 03:11 PM" BackgroundColor="White" FontSize="Large" 
