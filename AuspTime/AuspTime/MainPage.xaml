<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AuspTime"
             x:Class="AuspTime.MainPage">
    <StackLayout Spacing="0" x:Name="layout">
        <Label x:Name="dateTimeTitle" HorizontalTextAlignment="Center" 
               FontSize="36" FontAttributes="Bold" BackgroundColor="Aqua" />
        <Label x:Name="useCurrentOrConfigured" HorizontalOptions="CenterAndExpand" FontAttributes="Italic" />

        <ScrollView>
            <StackLayout Spacing="0">
