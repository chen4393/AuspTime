                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                <Label x:Name="labelTonight8" Text="LABH 05:03 PM" BackgroundColor="Aqua" FontSize="Large" 
                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                <Label x:Name="labelTonight9" Text="AMRIT 07:03 PM" BackgroundColor="LightBlue" FontSize="Large" 
                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />

                <BoxView Color="Wheat" />

                <Label x:Name="labelTomorrow1" Text="Tomorrow" TextColor="White" BackgroundColor="Black" FontSize="Large" HorizontalTextAlignment="Center" />
