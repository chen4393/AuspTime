                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                <Label x:Name="labelLastnight6" Text="UDWEG 01:34 PM" BackgroundColor="Red" FontSize="Large" 
                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                <Label x:Name="labelLastnight7" Text="CHAL 03:11 PM" BackgroundColor="White" FontSize="Large" 
                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                <Label x:Name="labelLastnight8" Text="LABH 05:03 PM" BackgroundColor="Aqua" FontSize="Large" 
                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                <Label x:Name="labelLastnight9" Text="AMRIT 07:03 PM" BackgroundColor="LightBlue" FontSize="Large" 
                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />

                <BoxView Color="Wheat" />

                <Label x:Name="labelToday1" Text="Today" TextColor="White" BackgroundColor="Black" FontSize="Large" HorizontalTextAlignment="Center" />
                <Label x:Name="labelToday2" Text="AMRIT 05:50 AM" BackgroundColor="LightBlue" FontSize="Large" 
                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                <Label x:Name="labelToday3" Text="KAAL 07:42 AM" BackgroundColor="LightPink" FontSize="Large" 
                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                <Label x:Name="labelToday4" Text="SHUBH 09:34 AM" BackgroundColor="Blue" FontSize="Large"
                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                <Label x:Name="labelToday5" Text="ROG 09:34 AM" BackgroundColor="Coral" FontSize="Large" 
                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                <Label x:Name="labelToday6" Text="UDWEG 01:34 PM" BackgroundColor="Red" FontSize="Large" 
                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                <Label x:Name="labelToday7" Text="CHAL 03:11 PM" BackgroundColor="White" FontSize="Large" 
                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                <Label x:Name="labelToday8" Text="LABH 05:03 PM" BackgroundColor="Aqua" FontSize="Large" 
                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                <Label x:Name="labelToday9" Text="AMRIT 07:03 PM" BackgroundColor="LightBlue" FontSize="Large" 
                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />

                <BoxView Color="Wheat" />

                <Label x:Name="labelTonight1" Text="Tonight" TextColor="White" BackgroundColor="Black" FontSize="Large" HorizontalTextAlignment="Center" />
                <Label x:Name="labelTonight2" Text="AMRIT 05:50 AM" BackgroundColor="LightBlue" FontSize="Large" 
                       HeightRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                <Label x:Name="labelTonight3" Text="KAAL 07:42 AM" BackgroundColor="LightPink" FontSize="Large" 
