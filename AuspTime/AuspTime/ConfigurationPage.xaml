<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuspTime.ConfigurationPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="20, 40, 20, 20"
                    Android="20, 20, 20, 20" />
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout>
            
            <StackLayout>
                <Label Text="Welcome to Xamarin Forms!" />
            </StackLayout>

            <StackLayout Orientation="Horizontal"  HorizontalOptions="FillAndExpand">

                <StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
                    <Button x:Name="doneButton" Text="Done" BackgroundColor="Aquamarine" 
                            WidthRequest="50" HeightRequest="40" Clicked="OnPreviousPageButtonClicked" />
                </StackLayout>

                <StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
                    <Button x:Name="aboutButton" Text="About Ace Auspicious Time" BackgroundColor="Aquamarine" 
                            WidthRequest="50" HeightRequest="40" Clicked="OnAboutClicked" />
                </StackLayout>

            </StackLayout>

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>